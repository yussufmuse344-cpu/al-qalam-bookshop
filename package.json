{
  "name": "lenzro-erp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:mobile": "vite build && npx cap copy",
    "android": "npm run build && npx cap copy android && npx cap open android",
    "android:sync": "npm run build && npx cap sync android",
    "android:bundle": "npm run build && npx cap copy android && cd android && .\\gradlew.bat bundleRelease",
    "android:clean": "cd android && .\\gradlew.bat clean",
    "android:keystore:hint": "echo Use keytool to create keystore: keytool -genkeypair -v -keystore hassan-lenzro.keystore -alias lenzro -keyalg RSA -keysize 2048 -validity 10000",
    "assets:generate": "npx capacitor-assets generate android --iconBackgroundColor=#0B0B14 --splashBackgroundColor=#0B0B14",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.59.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.11.9",
    "lucide-react": "^0.344.0",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.65.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.3",
    "@eslint/js": "^9.9.1",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "5.4.8"
  }
